{
	"title": "Demo Stage",
	"camera_target": "player",
	"layers": [
		{
			"title": "background",
			"graphic": {
				"type": "image",
				"graphic": "sky.png"
			},
			"layer": {
				"fixed": true,
				"static": true
			}
		},
		{
			"title": "stage",
			"graphic": {
				"type": "tile map",
				"tileset": "::tileset::demo",
				"value_map": "::tilemap::demo"
			}
		},
		{
			"title": "player",
			"graphic": {
				"type": "player",
				"stage": "::layer_graphic_property::stage.tiles",
				"player_data": {
					"x": 25,
					"y": 16
				},
				"key_handler": "::key_handler::"
			}
		},
		{
			"title": "transition",
			"graphic": {
				"type": "tiled animation",
				"image": "::property::game.scripts.custom.level_demo.transition_image",
				"rows": 1,
				"cols": 31,
				"durations": "::property::game.scripts.custom.level_demo.transition_durations",
				"width": "::window_width::",
				"height": "::window_height::",
				"delay": 0.5
			},
			"layer": {
				"on_animation_end": "::property::game.scripts.custom.level_demo.transition_on_animation_end",
				"fixed": true
			}
		},
		{
			"title": "title",
			"graphic": {
				"type": "heading",
				"text": "Demo Stage",
				"anchor_x": "center",
				"anchor_y": "center"
			},
			"layer": {
				"offset_x": 400,
				"offset_y": 300,
				"duration": 2.25,
				"fixed": true,
				"static": true
			}
		},
		{
			"title": "dash",
			"graphic": {
				"type": "live text",
				"text_source": "::property::game.scripts.custom.dash_meter.get_player_dash_percentage"
			},
			"layer": {
				"offset_x": 40,
				"offset_y": 10,
				"fixed": true
			}
		},
		{
			"title": "fps",
			"graphic": {
				"type": "live text",
				"text_source": "::property::game.scripts.get_fps"
			},
			"layer": {
				"offset_x": 10,
				"offset_y": 10,
				"fixed": true
			}
		}
	],
	"scripts": [
		"level_demo",
		"dash_meter"
	]
}
